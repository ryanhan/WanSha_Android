<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/product_detail_vertical_margin"
    android:paddingLeft="@dimen/product_detail_horizontal_margin"
    android:paddingRight="@dimen/product_detail_horizontal_margin"
    android:paddingTop="@dimen/product_detail_vertical_margin" >

    <TextView
        android:id="@+id/review_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/review_list_rank1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/review_list_rank2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/review_list_rank3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/review_list_rank4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/review_list_rank5"
            android:layout_width="15dp"
            android:layout_height="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/review_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/review_list_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/light_grey"
        android:textSize="12sp" />

</LinearLayout>